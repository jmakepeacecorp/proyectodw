@model ProyectoFinalDesarrollo.Models.Ventas
@{
    ViewBag.Title = "CrearVenta";
}

<h2>Nueva Venta</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-group">

                @Html.LabelFor(model => model.Clientes.FechaVenta, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Clientes.FechaVenta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Clientes.FechaVenta, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Clientes.CodigoCliente, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("CodigoCliente", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Clientes.CodigoCliente, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Encabezado.TipoDocumento, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Encabezado.TipoDocumento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Encabezado.TipoDocumento, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Encabezado.Estado, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Encabezado.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Encabezado.Estado, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.ActionLink("Agregar Producto", "AgregarProducto", new { }, new { @class="btn btn-default" })
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulos.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulos.Cantidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulos.PrecioUnitario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulos.partial)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i<Model.Productos.Count;i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Productos[i].Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Productos[i].Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Productos[i].PrecioUnitario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Productos[i].partial)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Productos[i].CodigoProducto })
                                @Html.ActionLink("Delete", "Delete", new { id = Model.Productos[i].CodigoProducto })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>



        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}